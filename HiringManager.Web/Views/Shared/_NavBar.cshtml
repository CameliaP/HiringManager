@{
    var areaName = "";
    if (ViewContext.RouteData.Values.ContainsKey("Area"))
    {
        areaName = ViewContext.RouteData.Values["Area"].ToString();
    }

    var controllerName = ViewContext.RouteData.Values["Controller"].ToString().ToLower();

    var controllerAreaIds = new Dictionary<string, string>()
                            {
                                {"positions", "#nav-bar-area-positions"},
                                {"candidate", "#nav-bar-area-candidates"},
                                {"source", "#nav-bar-area-sources"}
                            };

    var activeNavbarHeader = controllerAreaIds.ContainsKey(controllerName) ?
            controllerAreaIds[controllerName] :
            null;

}
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Hiring Manager", "Index", "Home", null, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li id="nav-bar-area-positions" class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">Positions <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Open Positions", MVC.Positions.Index("Open"))</li>
                        <li>@Html.ActionLink("All Positions", MVC.Positions.Index())</li>
                        <li>@Html.ActionLink("New Position", MVC.Positions.Create())</li>
                    </ul>
                </li>
                <li id="nav-bar-area-candidates">
                    @Html.ActionLink("Candidates", MVC.Candidate.Index())
                </li>
                <li id="nav-bar-area-sources">
                    @Html.ActionLink("Sources", MVC.Source.Index())
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">Help <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("About", MVC.Home.About())</li>
                    </ul>
                </li>
            </ul>

            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>

<script type="text/javascript">
    require(['jquery', 'bootstrap'], function ($) {
        $(function () {
            // placeholder to make sure jquery and bootstrap is loaded.
            @if (!string.IsNullOrWhiteSpace(activeNavbarHeader))
            {
                @:$("@activeNavbarHeader").addClass("active");
            }

        });
    });
</script>
