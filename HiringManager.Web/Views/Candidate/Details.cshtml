@model HiringManager.Web.ViewModels.Candidates.CandidateDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6">
        <h2>Details</h2>

        <div>
            @Html.LabelFor(model => model.Name)
            @Html.DisplayFor(model => model.Name)
        </div>
        <div>
            @Html.LabelFor(model => model.Source)
            @if (Model.SourceId.HasValue)
            {
                @Html.ActionLink(Model.Source, MVC.Source.Details(Model.SourceId.Value))
            }
            else
            {
                <span>(none)</span>
            }

        </div>
        <div>
            @foreach (var item in Model.ContactInfo)
            {
                <div>
                    <label>@item.Type</label>
                    <span>@item.Value</span>
                </div>
            }
        </div>
    </div>
    
</div>

<div class="row">
    <div class="col-md-9">
        <h3>Documents</h3>
        <table class="table table-bordered table-hover table-responsive table-striped">
            <thead>
                <tr>
                    <td colspan="2">
                        @using (Html.BeginRouteForm(MVC.Candidate.Upload()))
                        {
                            <div class="form-inline">
                                <div class="form-group">
                                    @Html.HiddenFor(m => m.CandidateId)

                                    <label>New Document</label>
                                    <div class="form-group">
                                        <input name="Document" class="form-control" type="file" />
                                    </div>
                                    <div class="form-group">
                                        <input type='submit' class="btn btn-default form-control" />
                                    </div>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
                <tr>
                    <th>Title</th>
                    <th></th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Documents)
                {
                    <tr>
                        <td>@Html.ActionLink(@item.Text, "Download", new { id = @item.Value })</td>
                        <td>
                            @using (Html.BeginRouteForm(MVC.Candidate.DeleteDocument()))
                            {
                                @Html.HiddenFor(m => m.CandidateId)
                                <input type='hidden' name="DocumentId" value="@item.Value"/>
                                <button type='submit' class="btn btn-danger glyphicon glyphicon-trash">Delete</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    
</div>

<div class="row">
    @Html.ActionLink("Edit", "Edit", new { id = Model.CandidateId }) |
    @Html.ActionLink("Back to List", "Index")
</div>

@section scripts {
    <script type="text/javascript">
        $(function () {
            $("input[type=file]").kendoUpload({
                multiple: true,
                showFileList: true
            });
        });
    </script>
}
