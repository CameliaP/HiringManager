@model HiringManager.Web.ViewModels.Positions.CandidateStatusViewModel

@{
    ViewBag.Title = "Hire Candidate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.PositionId)
    @Html.HiddenFor(m => m.CandidateId)
    @Html.HiddenFor(m => m.CandidateStatusId)
    <div class="form-group">
        @Html.LabelFor(m => m.PositionTitle)
        <br />
        @Html.DisplayFor(m => m.PositionTitle)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.CandidateName)
        <br />
        @Html.DisplayFor(m => m.CandidateName)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Status)
        <br/>
        @Html.DisplayFor(m => m.Status)
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Ok</button>
        <a href="@Url.Action("Candidates", new {id=Model.PositionId})" class="btn btn-default">Cancel</a>
    </div>
}
